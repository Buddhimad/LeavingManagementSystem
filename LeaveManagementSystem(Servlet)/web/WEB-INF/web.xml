<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>edu.ijse.lms.web.SignIn</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
     <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>edu.ijse.lms.web.SignUp</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
     <servlet>
        <servlet-name>Profile</servlet-name>
        <servlet-class>edu.ijse.lms.web.Profile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    
     <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>edu.ijse.lms.web.SignOut</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
     <servlet>
        <servlet-name>Requester</servlet-name>
        <servlet-class>edu.ijse.lms.web.RequestSender</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Requester</servlet-name>
        <url-pattern>/RS</url-pattern>
    </servlet-mapping>
     <servlet>
        <servlet-name>RequesterR</servlet-name>
        <servlet-class>edu.ijse.lms.web.RequestReceiver</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RequesterR</servlet-name>
        <url-pattern>/RR</url-pattern>
    </servlet-mapping>
     <servlet>
        <servlet-name>Seen</servlet-name>
        <servlet-class>edu.ijse.lms.web.RequestSeen</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Seen</servlet-name>
        <url-pattern>/seen</url-pattern>
    </servlet-mapping>
</web-app>
